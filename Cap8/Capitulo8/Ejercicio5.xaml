<Window x:Class="Cap8.Capitulo8.Ejercicio5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap8.Capitulo8"
        mc:Ignorable="d"
        Title="Ejercicio 5" Height="300" Width="300">
    <Grid  >
       <StackPanel Margin ="16" Orientation ="Vertical">
        <Label Content="Ingresa las cadenas " />
        <TextBox x:Name="CadenasTextBox" Text="" Margin ="4" FontSize="15"/>
        
        <ListBox  x:Name="imprimir"  d:ItemsSource="{d:SampleData ItemCount=2}" Height="65" Width="243"/>
          
          <StackPanel
        Margin = "0,16,0,0"
        Orientation ="Horizontal"
        HorizontalAlignment="Center" >
        
        <Button Content ="Agregar" Background = "#FFFDF4BF" Click ="agregar_Click"/>
        <Button Content ="Ordenar" Background = "#FFFDF4BF" Click ="ordenar_Click"/>
         
     </StackPanel>
     </StackPanel>

    </Grid>     
</Window>